{
  "compilerOptions": {
    "target": "es6",
    "module": "ES6",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "outDir": "./build",
    "baseUrl": "."
  },
  "include": ["modules/**/*"],
  "exclude": ["node_modules", "build"]
}
